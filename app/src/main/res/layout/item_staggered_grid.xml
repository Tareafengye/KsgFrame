<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_staggered_grid_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="@string/share_element_picture"
            tools:src="#00f" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_staggered_grid_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            tools:text="江户川柯南" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_staggered_grid_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:text="故事里的男主角，“名侦探柯南”的灵魂人物，原名工藤新一" />

    </LinearLayout>
</androidx.cardview.widget.CardView>