<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="12dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_video_icon"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toRightOf="@id/item_video_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_video_title"
        tools:src="#071" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#232323"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_video_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="《黑衣人：全球追缉》星际对决终极预告" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_video_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#999999"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/item_video_title"
        app:layout_constraintRight_toRightOf="@id/item_video_title"
        app:layout_constraintTop_toBottomOf="@id/item_video_title"
        tools:text="[惊悚]" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/item_video_rating"
        style="?attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="1"
        app:layout_constraintBottom_toBottomOf="@id/item_video_icon"
        app:layout_constraintLeft_toLeftOf="@id/item_video_summary" />

</androidx.constraintlayout.widget.ConstraintLayout>