<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kasiengao.ksgframe.java.widget.PlayerContainerView
        android:id="@+id/player_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 当前 解码器 -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/player_decoder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/player_container"
        tools:text="ksg" />

    <!-- 可替换的解码器-->
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/player_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_spinner"
        android:entries="@array/players"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/player_decoder" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/player_window"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="窗口播放"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>